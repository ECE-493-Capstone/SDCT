{
  "name": "sdct",
  "publisher": "493-W24-Team11",
  "displayName": "Software Development Collaboration Tool (SDCT)",
  "description": "Communication tools for developers inside Visual Studio",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sdct.login",
        "title": "SDCT: Login with GitHub"
      },
      {
        "command": "sdct.logout",
        "title": "SDCT: Logout"
      },
      {
        "command": "sdct.searchChat",
        "title": "SDCT: Search Chat",
        "icon": "media/search.png"
      },
      {
        "command": "sdct.manageAccount",
        "title": "SDCT: Manage Account",
        "icon": "media/setting.png"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sdct-view-container",
          "title": "SDCT",
          "icon": "media/sadcat.png"
        }
      ]
    },
    "views": {
      "sdct-view-container": [
        {
          "id": "chatList",
          "name": "Chat List"
        },
        {
          "id": "profile",
          "name": "Profile"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "chatList",
        "contents": "[Login with GitHub](command:sdct.login)"
      }
    ],
    "menus": {
      "view/title": [
          {
              "command": "sdct.searchChat",
              "when": "view == chatList",
              "group": "navigation"
          },
          {
            "command": "sdct.manageAccount",
            "when": "view == profile",
            "group": "navigation"
        }
      ]
  }
  
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.86.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
